  <body>
    <%- include('../partials/header.ejs') %> 
    <main>
      
      <section class="section" id="inicio">
        <h1>SelfLove</h1>
        <p>Buscamos Cambios</p>
      </section>

      <h1 class="welcome">Bienvenida/o!</h1> 
      <div class="form">
        <fieldset>
          <form action="/signin" method="post" class="sendReq">   
            <label for="user" >Nombre de usuario: </label>
            <input
              type="text"
              placeholder="Nombre de usuario"
              name="user"
              id="user">

            <label for="pass">Contraseña: </label>
            <input
                type="password"
                placeholder="Contraseña"
                name="pass"
                id="pass">

          
          <input type="submit" value="Ingresar" class="sumbit">
        </form>
        <div class="register"><p>¿No estas registrado?</p><a href="/signup">Registrate</a></div>
      </div>
    </main>

    <%- include('../partials/footer.ejs') %> 
    
